{% import 'macros/macros.landing.twig' as landing %}
{% 
  set items = [
    {
      "image": "img/descr1.png",
      "number": "1",
      "text": "персональное<br>занятие по фитнесу"
    },
    {
      "image": "img/descr2.png",
      "number": "1",
      "text": "футболка"
    },
    {
      "image": "img/descr3.png",
      "number": "1",
      "text": "поход<br>на концерт"
    }
  ]
%}
<section class="section description" id="section-description">
  <div class="container">
    {{
      landing.header(
        'description__header text-center',
        {text: '2000 руб. - это'}
      )
    }}
    <div class="row description__items">
      {% for item in items %}
        <div class="col-4 description__item">
          <div class="description__item-header">
            {{landing.image(item.image, item.text|striptags, 'description__item-image')}}
          </div>
          <div class="description__item-body">
            <p class="description__item-number">{{item.number}}</p>
            <p class="description__item-text">{{item.text|raw}}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="description__footer text-center">
      {# {{landing.timer('clock2','Спецпредложение действительно еще:', 'description__clock')}} #}
      {{
        landing.button(
          'description__footer-button btn_brand-1', 
          'Участвовать по спеццене',
          {
            "data-action": "modal",
            "data-open": "#modal-form"
          }
        )
      }}
    </div>
  </div>
</section>