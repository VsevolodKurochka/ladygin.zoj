{% import 'macros/macros.landing.twig' as landing %}
{% 
  set items = [
    {
      'title': '10',
      'subtitle': 'дней',
      'text' : 'поддержи куратора,<br> психолога, <br>единомышленников<br><br><br>' 
    },
    {
      'title': '52',
      'subtitle': 'видеоурока',
      'text': '11 обязательных + <br>остальные на выбор'
    },
    {
      'title': '<sub>от</sub> 20',
      'subtitle': 'минут участия<br>в день',
      'text': 'до 2 часов в день по Вашему желанию'
    },
    {
      'title': '9',
      'subtitle': 'живых встреч-<br>вебинаров',
      'text': 'с экспертами отрасли'
    },
    {
      'title': '<sup>Приз</sup>10 000',
      'subtitle': 'рублей<br>за лучшие  результаты',
      'text': '* Подробные условия конкурса сообщаются учасниками марафона до его начала'
    }
  ]
%}
<section class="section format" id="section-format">
  {{
    landing.header(
    'format__header', 
    {text: 'Формат марафона'}
    )
  }}
  <div class="container">
    <div class="row format__row">
      {% set i = 0 %}
      {% set itemsLength = items|length %}
      {% for item in items %}
        {% set i = i + 1 %}
        {% if i == itemsLength %}
        <div class="col-12 format__item format__item_fluid">
          {{ landing.cube(item.title, item.subtitle, 'format__item-cube format__item-cube_3', item.text) }}
        </div>
        {% else %}
         <div class="col-6 col-sm-3 format__item ">
            {{ landing.cube(item.title, item.subtitle, 'format__item-cube format__item-cube_2', item.text) }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>