        </ul>
      </div>
    </div>
    <div class="payment__footer text-center">
      {{
        landing.button(
          'payment__footer-button btn_brand-1', 
          'Забрать одно из последних<br>мест по 1000 руб.',
          {
            "data-scroll": "data-scroll",
            "href": "#section-form"
