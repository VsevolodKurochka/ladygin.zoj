{% macro logo(options, burger) %}
  {% import _self as macros %}
  <div class="nav__logo {{options.class}}">    
    <img class="nav__logo-img" src="{{options.logo}}" alt="{{options.alt}}"/>
    {% if burger %}
      {{ macros.hamburger() }}
    {% endif %}
  </div>
{% endmacro %}

